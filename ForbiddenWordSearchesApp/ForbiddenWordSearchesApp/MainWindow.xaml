<Window x:Class="ForbiddenWordSearchesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForbiddenWordSearchesApp"
        mc:Ignorable="d"
                Title="Поиск запрещенных слов"
        Height="700"
        Width="530"
        MinHeight="700"
        MinWidth="530"
        WindowStartupLocation="CenterScreen"
        Background="DarkGray"
        KeyUp="Keyboard_KeyUp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Margin="5"
                BorderBrush="Gray"
                BorderThickness="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ResultTextBlock"
					       HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           TextAlignment="Left"
                           Margin="5"
                           Padding="5"
                           Background="White" />
            </ScrollViewer>
        </Border>

        <ProgressBar x:Name="ProgressBar"
					 Grid.Row="1"
					 VerticalAlignment="Stretch"
					 Margin="5"
					 Background="Gray"
					 Minimum="0" />

        <StackPanel Orientation="Vertical"                  
                    VerticalAlignment="Center"
                    Grid.Row="2">
            <TextBlock HorizontalAlignment="Stretch"
                       VerticalAlignment="Center"
                       TextAlignment="Left"
                       Margin="5, 0, 5, 0"
                       Padding="5, 0, 0, 0"
                       Background="Gray"
                       Foreground="White"
                       Text="Введите запрещённые слова, разделяя их пробелами:" />
            <TextBox x:Name="FirstTextBox"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     Margin="5, 0, 5, 0"
                     BorderBrush="Gray"
                     BorderThickness="1"
					 Text=""/>
        </StackPanel>

        <StackPanel Orientation="Vertical"                  
                    VerticalAlignment="Center"
                    Grid.Row="3">
            <TextBlock HorizontalAlignment="Stretch"
                       VerticalAlignment="Center"
                       TextAlignment="Left"
                       Margin="5, 0, 5, 0"
                       Padding="5, 0, 0, 0"
                       Background="Gray"
                       Foreground="White"
                       Text="Введите путь к файлу со списком запрещённых слов:" />
            <TextBox x:Name="SecondTextBox"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     Margin="5, 0, 5, 0"
                     BorderBrush="Gray"
                     BorderThickness="1"
                     Text="D:\ФИЛИПП\Временные\DEST\BWords.txt"/>
        </StackPanel>

        <StackPanel Orientation="Vertical"                  
					VerticalAlignment="Center"
					Grid.Row="4">
            <TextBlock HorizontalAlignment="Stretch"
					   VerticalAlignment="Center"
					   TextAlignment="Left"
					   Margin="5, 0, 5, 0"
                       Padding="5, 0, 0, 0"
					   Background="Gray"
					   Foreground="White"
					   Text="Введите путь к директории, в которой нужно выполнить поиск:" />
            <TextBox x:Name="ThirdTextBox"
					 HorizontalAlignment="Stretch"
					 VerticalAlignment="Center"
					 Margin="5, 0, 5, 0"
					 BorderBrush="Gray"
					 BorderThickness="1"
					 Text="D:\ФИЛИПП\Временные\DEST\SOURCE" />
        </StackPanel>

        <StackPanel Orientation="Vertical"                  
                    VerticalAlignment="Center"
                    Grid.Row="5">
            <TextBlock HorizontalAlignment="Stretch"
                       VerticalAlignment="Center"
                       TextAlignment="Left"
                       Margin="5, 0, 5, 0"
                       Padding="5, 0, 0, 0"
                       Background="Gray"
                       Foreground="White"
                       Text="Введите путь к директории, где будет создана новая директория с результатами поиска:" />
            <TextBox x:Name="FourthTextBox"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     Margin="5, 0, 5, 0"
                     BorderBrush="Gray"
                     BorderThickness="1"
					 Text="D:\ФИЛИПП\Временные\DEST"/>
        </StackPanel>

        <StackPanel Orientation="Vertical"                  
                    VerticalAlignment="Center"
                    Grid.Row="6">
            <Button x:Name="StartButton"
                    Height="30"
                    Width="530"
                    Margin="5"
                    Background="Gray"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Heavy"
                    Content="Старт"
                    Click="Start_Click" />
            <Button x:Name="PauseButton"
                    Height="30"
                    Width="530"
                    Margin="5"
                    Background="Gray"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Heavy"
                    IsEnabled="False"
                    Content="Пауза"
                    Click="Pause_Click" />
            <Button x:Name="StopButton"
                    Height="30"
                    Width="530"
                    Margin="5"
                    Background="Gray"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Heavy"
                    IsEnabled="False"
                    Content="Стоп"
                    Click="Stop_Click" />
        </StackPanel>
    </Grid>
</Window>